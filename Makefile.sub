	cp -r sphinx/build/html/* ${GHPAGES}
	(cd ${GHPAGES} && git add -u && git add . \
	 && (git diff --cached  --exit-code \
             || git commit -m '${shell date +"%Y-%m-%d %H:%M:%S"}'))
	git worktree remove ${GHPAGES}
