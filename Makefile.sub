###################################################################
# The following stuff is only relevant inside tmp/
%.compile: %.spad
	echo ")compile $<" >> projectcompile.input
	grep '^)abbrev' $< \
        | sed -e 's/^.abbrev[ ]*domain[ \t]*[A-Z0-9]*[ \t]*/    --D /' \
              -e 's/^.abbrev[ ]*category[ \t]*[A-Z0-9]*[ \t]*/    --C /' \
              -e 's/^.abbrev[ ]*package[ \t]*[A-Z0-9]*[ \t]*/    --P /' \
	>> projectcompile.input
	${STAMP} $@

